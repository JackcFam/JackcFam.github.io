extends template-part/layout.pug
block style
    link(rel="stylesheet", href="./css/contact.css")
block title
    title  Liên Hệ



block content

        .duongdan
            .container
                    a(href="#").duongdan1 Trang chủ &nbsp;&nbsp; /
                        span &nbsp;&nbsp; Liên Hệ
        .maps
            .container
                .row
                    .col
                        .map
                            iframe(src='https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3725.670879722808!2d105.78042671429681!3d20.965728195304504!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3135ade3516c7f0f%3A0x24ed304a9df266a1!2zTmfDoyA1IGjDoCB0csOs!5e0!3m2!1svi!2s!4v1595653922408!5m2!1svi!2s' width='100%' height='350' frameborder='0' style='border:0;' allowfullscreen aria-hidden='false' tabindex='0')

        .contact
            .container
                .row.justify-content-between

                        .col-xl-6.col-lg-6.col-md-6.col-sm-6.lien-he-us2
                            .lienhe-us
                                .title-infor Thông Tin Liên Hệ
                                .tencuahang Hoa Quả Sạch
                                p.diachi-us Địa chỉ: LK21 - Khu đô thị Sông Công - Hà Trì - Hà Đông - Hà nội
                                p.diachi-us Hotline: 0339172861
                                p.diachi-us Email: phamnhat05111997@gmail.com




                        .col-xl-6.col-lg-6.col-md-6.col-sm-6

                            form.contact__sent

                                .sent__group-input
                                    label(for="email") Địa chỉ Email*
                                    input(type="email" id="email" name="email" placeholder="example@domain.com")
                                    p.error Vui lòng nhập Email hợp lệ
                                .sent__group-input
                                    label(for="note") Nhập nội dung*
                                    textarea(name="note", cols="30", rows="5" id="contacnote" placeholder="Bạn muốn nói với chúng tôi điều gì")
                                    p.error Vui lòng nhập nội dung hợp lệ
                                button.btn__sent Gửi tin
                                p.success Gửi thành công















block script
    script(src="./js/contact.js")
